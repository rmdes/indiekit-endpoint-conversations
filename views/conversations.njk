{% extends "document.njk" %}

{% block content %}
<div class="panel">
  <h1>{{ __("conversations.title") }}</h1>

  {% if error %}
  <p class="badge badge--error">{{ error }}</p>
  {% endif %}

  {# Connection Status Cards #}
  <h2>{{ __("conversations.dashboard.connections") }}</h2>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1rem; margin-bottom: 2rem">

    {# Mastodon Card #}
    <div style="border: 1px solid var(--color-border, #e5e7eb); border-radius: 8px; padding: 1rem">
      <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem">
        <svg style="width:20px;height:20px" viewBox="0 0 24 24" fill="#6364ff" aria-label="Mastodon">
          <path d="M23.268 5.313c-.35-2.578-2.617-4.61-5.304-5.004C17.51.242 15.792 0 11.813 0h-.03c-3.98 0-4.835.242-5.288.309C3.882.692 1.496 2.518.917 5.127.64 6.412.61 7.837.661 9.143c.074 1.874.088 3.745.26 5.611.118 1.24.325 2.47.62 3.68.55 2.237 2.777 4.098 4.96 4.857 2.336.792 4.849.923 7.256.38.265-.061.527-.132.786-.213.585-.184 1.27-.39 1.774-.753a.057.057 0 0 0 .023-.043v-1.809a.052.052 0 0 0-.02-.041.053.053 0 0 0-.046-.01 20.282 20.282 0 0 1-4.709.545c-2.73 0-3.463-1.284-3.674-1.818a5.593 5.593 0 0 1-.319-1.433.053.053 0 0 1 .066-.054c1.517.363 3.072.546 4.632.546.376 0 .75 0 1.125-.01 1.57-.044 3.224-.124 4.768-.422.038-.008.077-.015.11-.024 2.435-.464 4.753-1.92 4.989-5.604.008-.145.03-1.52.03-1.67.002-.512.167-3.63-.024-5.545zm-3.748 9.195h-2.561V8.29c0-1.309-.55-1.976-1.67-1.976-1.23 0-1.846.79-1.846 2.35v3.403h-2.546V8.663c0-1.56-.617-2.35-1.848-2.35-1.112 0-1.668.668-1.668 1.977v6.218H4.822V8.102c0-1.31.337-2.35 1.011-3.12.696-.77 1.608-1.164 2.74-1.164 1.311 0 2.302.5 2.962 1.498l.638 1.06.638-1.06c.66-.999 1.65-1.498 2.96-1.498 1.13 0 2.043.395 2.74 1.164.675.77 1.012 1.81 1.012 3.12z"/>
        </svg>
        <strong>Mastodon</strong>
        {% if config.mastodonEnabled %}
        <span class="badge" style="background: #059669; color: white; font-size: 0.75em">{{ __("conversations.dashboard.connected") }}</span>
        {% else %}
        <span class="badge" style="background: #6b7280; color: white; font-size: 0.75em">{{ __("conversations.dashboard.disconnected") }}</span>
        {% endif %}
      </div>
      {% if config.mastodonEnabled %}
        {% if pollState.mastodon_last_poll %}
        <p style="font-size: 0.85em; color: #6b7280; margin: 0.25rem 0">
          {{ __("conversations.dashboard.lastPoll") }}: {{ pollState.mastodon_last_poll | date("PPp") }}
        </p>
        {% endif %}
        {% if pollState.mastodon_last_error %}
        <p style="font-size: 0.85em; color: #dc2626; margin: 0.25rem 0">
          {{ __("conversations.dashboard.lastError") }}: {{ pollState.mastodon_last_error }}
        </p>
        {% endif %}
        <p style="font-size: 0.85em; margin: 0.25rem 0">
          {{ platformCounts.mastodon or 0 }} {{ __("conversations.dashboard.itemsCollected") }}
        </p>
      {% else %}
        <p style="font-size: 0.85em; color: #6b7280; margin: 0.25rem 0">
          {{ __("conversations.dashboard.mastodonHint") }}
        </p>
      {% endif %}
    </div>

    {# Bluesky Card #}
    <div style="border: 1px solid var(--color-border, #e5e7eb); border-radius: 8px; padding: 1rem">
      <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem">
        <svg style="width:20px;height:20px" viewBox="0 0 568 501" fill="#0085ff" aria-label="Bluesky">
          <path d="M123.121 33.664C188.241 82.553 258.281 181.68 284 234.873c25.719-53.192 95.759-152.32 160.879-201.21C491.866-1.611 568-28.906 568 57.947c0 17.346-9.945 145.713-15.778 166.555-20.275 72.453-94.155 90.933-159.875 79.748C507.222 323.8 536.444 388.56 473.333 453.32c-119.86 122.992-172.272-30.859-185.702-70.281-2.462-7.227-3.614-10.608-3.631-7.733-.017-2.875-1.169.506-3.631 7.733-13.43 39.422-65.842 193.273-185.702 70.281-63.111-64.76-33.89-129.52 80.986-149.071-65.72 11.185-139.6-7.295-159.875-79.748C9.945 203.659 0 75.291 0 57.946 0-28.906 76.135-1.612 123.121 33.664Z"/>
        </svg>
        <strong>Bluesky</strong>
        {% if config.blueskyEnabled %}
        <span class="badge" style="background: #059669; color: white; font-size: 0.75em">{{ __("conversations.dashboard.connected") }}</span>
        {% else %}
        <span class="badge" style="background: #6b7280; color: white; font-size: 0.75em">{{ __("conversations.dashboard.disconnected") }}</span>
        {% endif %}
      </div>
      {% if config.blueskyEnabled %}
        {% if pollState.bluesky_last_poll %}
        <p style="font-size: 0.85em; color: #6b7280; margin: 0.25rem 0">
          {{ __("conversations.dashboard.lastPoll") }}: {{ pollState.bluesky_last_poll | date("PPp") }}
        </p>
        {% endif %}
        {% if pollState.bluesky_last_error %}
        <p style="font-size: 0.85em; color: #dc2626; margin: 0.25rem 0">
          {{ __("conversations.dashboard.lastError") }}: {{ pollState.bluesky_last_error }}
        </p>
        {% endif %}
        <p style="font-size: 0.85em; margin: 0.25rem 0">
          {{ platformCounts.bluesky or 0 }} {{ __("conversations.dashboard.itemsCollected") }}
        </p>
      {% else %}
        <p style="font-size: 0.85em; color: #6b7280; margin: 0.25rem 0">
          {{ __("conversations.dashboard.blueskyHint") }}
        </p>
      {% endif %}
    </div>

    {# Webhook/Ingest Card #}
    <div style="border: 1px solid var(--color-border, #e5e7eb); border-radius: 8px; padding: 1rem">
      <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem">
        <svg style="width:20px;height:20px" viewBox="0 0 24 24" fill="none" stroke="#888" stroke-width="2" aria-label="Webhook">
          <circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
        </svg>
        <strong>{{ __("conversations.dashboard.webhookTitle") }}</strong>
        <span class="badge" style="background: #059669; color: white; font-size: 0.75em">{{ __("conversations.dashboard.ready") }}</span>
      </div>
      <p style="font-size: 0.85em; color: #6b7280; margin: 0.25rem 0">
        {{ __("conversations.dashboard.webhookHint") }}
      </p>
      <code style="font-size: 0.8em; display: block; margin-top: 0.5rem; padding: 0.25rem 0.5rem; background: var(--color-background-code, #f3f4f6); border-radius: 4px">
        POST {{ baseUrl }}/ingest
      </code>
      <p style="font-size: 0.85em; margin: 0.25rem 0">
        {{ platformCounts.webmention or 0 }} {{ __("conversations.dashboard.itemsReceived") }}
      </p>
    </div>
  </div>

  {# Stats #}
  <h2>{{ __("conversations.dashboard.stats") }}</h2>
  <div style="display: flex; gap: 1.5rem; margin-bottom: 2rem; flex-wrap: wrap">
    <div style="text-align: center">
      <div style="font-size: 1.5em; font-weight: bold">{{ totalItems }}</div>
      <div style="font-size: 0.85em; color: #6b7280">{{ __("conversations.dashboard.totalItems") }}</div>
    </div>
    {% if typeCounts.reply %}
    <div style="text-align: center">
      <div style="font-size: 1.5em; font-weight: bold">{{ typeCounts.reply }}</div>
      <div style="font-size: 0.85em; color: #6b7280">{{ __("conversations.dashboard.replies") }}</div>
    </div>
    {% endif %}
    {% if typeCounts.like %}
    <div style="text-align: center">
      <div style="font-size: 1.5em; font-weight: bold">{{ typeCounts.like }}</div>
      <div style="font-size: 0.85em; color: #6b7280">{{ __("conversations.dashboard.likes") }}</div>
    </div>
    {% endif %}
    {% if typeCounts.repost %}
    <div style="text-align: center">
      <div style="font-size: 1.5em; font-weight: bold">{{ typeCounts.repost }}</div>
      <div style="font-size: 0.85em; color: #6b7280">{{ __("conversations.dashboard.reposts") }}</div>
    </div>
    {% endif %}
  </div>

  {# Manual Poll Button #}
  {% if config.mastodonEnabled or config.blueskyEnabled %}
  <div style="margin-bottom: 2rem">
    <form method="post" action="{{ baseUrl }}/poll">
      <button type="submit" class="button">
        {{ __("conversations.dashboard.pollNow") }}
      </button>
    </form>
  </div>
  {% endif %}

  {# Recent Activity Log #}
  {% if recentItems.length > 0 %}
  <h2>{{ __("conversations.dashboard.recentActivity") }}</h2>
  <ul style="list-style: none; padding: 0">
    {% for item in recentItems %}
    <li style="display: flex; gap: 0.75rem; padding: 0.5rem 0; border-bottom: 1px solid var(--color-border, #e5e7eb); align-items: center">
      {# Platform icon #}
      {% if item.source == "bluesky" %}
      <svg style="width:14px;height:14px;flex-shrink:0" viewBox="0 0 568 501" fill="#0085ff"><path d="M123.121 33.664C188.241 82.553 258.281 181.68 284 234.873c25.719-53.192 95.759-152.32 160.879-201.21C491.866-1.611 568-28.906 568 57.947c0 17.346-9.945 145.713-15.778 166.555-20.275 72.453-94.155 90.933-159.875 79.748C507.222 323.8 536.444 388.56 473.333 453.32c-119.86 122.992-172.272-30.859-185.702-70.281-2.462-7.227-3.614-10.608-3.631-7.733-.017-2.875-1.169.506-3.631 7.733-13.43 39.422-65.842 193.273-185.702 70.281-63.111-64.76-33.89-129.52 80.986-149.071-65.72 11.185-139.6-7.295-159.875-79.748C9.945 203.659 0 75.291 0 57.946 0-28.906 76.135-1.612 123.121 33.664Z"/></svg>
      {% elif item.source == "mastodon" %}
      <svg style="width:14px;height:14px;flex-shrink:0" viewBox="0 0 24 24" fill="#6364ff"><path d="M23.268 5.313c-.35-2.578-2.617-4.61-5.304-5.004C17.51.242 15.792 0 11.813 0h-.03c-3.98 0-4.835.242-5.288.309C3.882.692 1.496 2.518.917 5.127.64 6.412.61 7.837.661 9.143c.074 1.874.088 3.745.26 5.611.118 1.24.325 2.47.62 3.68.55 2.237 2.777 4.098 4.96 4.857 2.336.792 4.849.923 7.256.38.265-.061.527-.132.786-.213.585-.184 1.27-.39 1.774-.753a.057.057 0 0 0 .023-.043v-1.809a.052.052 0 0 0-.02-.041.053.053 0 0 0-.046-.01 20.282 20.282 0 0 1-4.709.545c-2.73 0-3.463-1.284-3.674-1.818a5.593 5.593 0 0 1-.319-1.433.053.053 0 0 1 .066-.054c1.517.363 3.072.546 4.632.546.376 0 .75 0 1.125-.01 1.57-.044 3.224-.124 4.768-.422.038-.008.077-.015.11-.024 2.435-.464 4.753-1.92 4.989-5.604.008-.145.03-1.52.03-1.67.002-.512.167-3.63-.024-5.545zm-3.748 9.195h-2.561V8.29c0-1.309-.55-1.976-1.67-1.976-1.23 0-1.846.79-1.846 2.35v3.403h-2.546V8.663c0-1.56-.617-2.35-1.848-2.35-1.112 0-1.668.668-1.668 1.977v6.218H4.822V8.102c0-1.31.337-2.35 1.011-3.12.696-.77 1.608-1.164 2.74-1.164 1.311 0 2.302.5 2.962 1.498l.638 1.06.638-1.06c.66-.999 1.65-1.498 2.96-1.498 1.13 0 2.043.395 2.74 1.164.675.77 1.012 1.81 1.012 3.12z"/></svg>
      {% else %}
      <svg style="width:14px;height:14px;flex-shrink:0" viewBox="0 0 24 24" fill="none" stroke="#888" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
      {% endif %}

      <span class="badge badge--{{ item.type }}" style="font-size: 0.75em">{{ item.type }}</span>

      <span style="flex: 1; min-width: 0; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; font-size: 0.85em">
        {% if item.author and item.author.name %}
          <strong>{{ item.author.name }}</strong>
        {% endif %}
        {% if item.canonical_url %}
          &rarr; {{ item.canonical_url | replace("https://", "") | truncate(40) }}
        {% endif %}
      </span>

      {% if item.received_at %}
      <time datetime="{{ item.received_at }}" style="font-size: 0.75em; color: #6b7280; flex-shrink: 0">
        {{ item.received_at | date("PP") }}
      </time>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
  {% else %}
  <p>{{ __("conversations.dashboard.empty") }}</p>
  {% endif %}
</div>
{% endblock %}
